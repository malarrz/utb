extends layout

include mixins/_tarjetaTienda

block content
  .inner
    h2 #{etiqueta || 'Etiquetas'}
    ul.tags
      each t in etiquetas
        li.tag 
          a.tag__link(href=`/etiquetas/${t._id}` class=(t._id === etiqueta ? 'tag__link--active' : ""))
            span.tag__text= t._id 
            span.tag__count= t.count
    .stores
      each tienda in tiendas
        +tarjetaTienda(tienda)